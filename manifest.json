{
    "manifest_version": 2,
    "name": "Copy Text from HTML Extension",
    "version": "1.0",
    "description": "Copy text content of an HTML element with Shift + Alt + C",
    "author": "junior mayhe",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_title": "Copy Text",
        "default_icon": "icon.png"
    },
    "commands": {
        "copy-text": {
            "suggested_key": {
                "default": "Shift+Alt+C"
            },
            "description": "Copy text only from selected HTML element"
        }
    }
}